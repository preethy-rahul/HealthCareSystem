<div class="container">
<p id="notice"><%= notice %></p>
</br>
</br>
<% if(patient_signed_in?) %>
<%= render "name_search_box" %>
<% end %>

<h1>Listing Doctors</h1>
<table class="table table-striped">
  <thead>
    <tr>

      <th>Name</th>
      <th>Experience</th>
      <th>clinic</th>
     <td>         </td>
     <td>   </td>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.name %></td>
        <td><%= doctor.experience%></td>
        <td><%= doctor.clinic_details%></td>
        <td><%= link_to 'Show', doctor %></td>
        <% if (admin_signed_in?) %>
          <td><%= link_to 'Approving', edit_doctor_path(doctor) %></td>
        <% end %>
        <% if !(patient_signed_in?) %>
          <td><%= link_to 'Fix Appointment',page_path('support') %></td>
        <% end %>
        <%if (admin_signed_in? || doctor_signed_in?) %>

            <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
         <% end %>
      </tr>
      <% end %>
  </tbody>
</table>
<% if (admin_signed_in? || doctor_signed_in?) %>
<%= link_to 'new doctor' ,new_doctor_registration_path %>
<% end %>



</div>
</div>
</div>
</div>
