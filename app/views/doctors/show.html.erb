<div class="container">
<center><h1>My Profile</h1></center>

<table class="table">
<thead>
  <tr>
     <th>Name</th>
     <th>Age</th>
     <th>Sex</th>
     <th>Phone</th>
     <th>Experience</th>
     <th>Clinic Details</th>
     <th>City</th>
     <th>State</th>
     <th>Email</th>
    <th colspan="3"></th>
  </tr>
  </thead>
 <tbody>
 
 <tr class="success">  
      <td><%= @doctor.name %></td>
      <td><%= @doctor.age %></td>
      <td><%= @doctor.sex %></td>
      <td><%= @doctor.phone %></td>
      <td><%= @doctor.experience %></td>
      <td><%= @doctor.clinic_details%></td>
      <td><%= @doctor.city%></td>
      <td><%= @doctor.state %></td>
     <td><%=  @doctor.email %></td>
      
      </tr> 
  </tbody>
</table>




<div class="row">
  <div class="small-2 large-2 columns">
    <%= imdb_style_rating_for @doctor, current_patient%>
  </div>
  <br>
  <div class="small-2 large-4 columns">
  
    <%= if current_patient %>
  Doctor Rating:<%= rating_for @doctor, 'experience' , star: 10 %>
      
  <% end %>



  </div>
</div>
