

<!DOCTYPE html>
<html lang="en"><head>
<meta http-equiv="content-type" content="text/html; charset=UTF-8">
<meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Sign Up</title>
  <link rel="stylesheet" href="Bootstrap_files/bootstrap.css">
  <style>
  .jumbotron{
  background-color:#FA8072;
  color:black;
   background-size: cover;
  padding-top: 1%;
      padding-bottom: 1%;
      width: 70%;
  }
  body
  {
     font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
     font-size: 15px;
     background-color : #DAF7A6;
  }

  </style>
  </head>
  <body>
<h1><center>Doctor Sign Up</center></h1>
<div class="container">
<center>
<div class="jumbotron">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true ,placeholder: "Name"%>
  </div>

    <div class="field">
    <%= f.label :age %><br />
    <%= f.text_field :age, autofocus: true ,placeholder:"Age"%>
  </div>
     <div class="field">
    <%= f.label :sex %><br />
    <%= f.text_field :sex, autofocus: true,placeholder:"Geneder" %>
  </div>

  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone, autofocus: true,placeholder:"Your mob.No" %>
  </div>

    <div class="field">
    <%= f.label :experience %><br />
    <%= f.text_field :experience, autofocus: true,placeholder:"Years of Experience" %>
  </div>

     <div class="field">
    <%= f.label :clinic_details %><br />
    <%= f.text_area :clinic_details, autofocus: true ,placeholder:"Clinic Details"%>
  </div>

  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city, autofocus: true ,placeholder:"Your City"%>
  </div>

    <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state, autofocus: true,placeholder:"Your State" %>
  </div>
    
     <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true,placeholder:"Choose Username" %>
  </div>

     <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true,placeholder:"Email ID" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" ,placeholder: "Select password"%>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",placeholder: "Retype password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "doctors/shared/links" %>
</div>
</center>
</div>
</body>
</html>