</br><div class="panel panel-danger">
<div class="panel-heading panel-heading-custom">
       <h3 class="panel-title">All Appointments</h3>
        <div class="panel-body">


<%= form_for(@slot) do |f| %>
  <% if @slot.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@slot.errors.count, "error") %> prohibited this slot from being saved:</h2>

      <ul>
      <% @slot.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
    <%= f.label :start_time %><br>
  <%= f.time_select :start_time,
  :combined => true,
  :include_blank => true,
 # :default => Time.now.change(:hour =>00, :min => 00),
  :minute_interval => 15,
  :time_separator => "",
  :start_hour => 8,
  :start_minute => 30,
  :end_hour => 14,
  :end_minute => 30,
  :ampm => true
%>
</div>
  
    <%#= f.text_field :start_time %>
  
  <div class="field">
    <%= f.label :end_time %><br>
      <%= f.time_select :end_time,
  :combined => true,
  :include_blank => true,
  #:default => Time.now.change(:hour => 11, :min => 30),
  :minute_interval => 15,
  :time_separator => "",
  :start_hour => 10,
  :start_minute => 30,
  :end_hour => 20,
  :end_minute => 30,
  :ampm => true
%>
    <%#= f.text_field :end_time %>
  </div>
  <div class="field">
    <%= f.label :duration %><br>
    <%= f.text_field :duration %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>
</div>
</div>
</div>
</body>
