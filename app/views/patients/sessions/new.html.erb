  </head>
  <body>

<h2><center>Patient Sign In</center></h2>
<div class="container">

<center>
<div class="jumbotron">
   <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
   <div class="field">
   <%= f.label :email%><br />
    <%= f.text_field :email, autofocus: true , placeholder: "Email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder:"Password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
 

 </div>
  
<% end %>

<%= render "patients/shared/links" %>
 </center>
 </div>
</div>sss
</div>
  </body>
  </html>